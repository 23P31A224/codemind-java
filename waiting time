import java.util.*;
import java.lang.*;
import java.io.*;

class Codechef
{
	public static void main (String[] args) throws java.lang.Exception
	{
	
        int t;
        Scanner read=new Scanner(System.in);
        t=read.nextInt();
        for(int i=0;i<t;i++){
            int a,b;
            a=read.nextInt();
            b=read.nextInt();
            int c=7*a-b;
           System.out.printf("%d\n",c);
        }
	}
}
